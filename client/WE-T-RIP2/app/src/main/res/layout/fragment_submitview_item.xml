<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_submit_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="1st DAY"
        android:textColor="@color/floadingbuttonbackground"
        android:textSize="30sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/submit_top"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimary">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/submit_course_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/submit_course_cost"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="일정을 입력해주세요"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/submit_course_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text="2,000원"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/submit_course_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/submit_course_title"
                    android:paddingLeft="10dp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/submit_course_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/submit_course_title"
                    android:layout_toRightOf="@id/submit_course_start_time" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/submit_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit_top"
                android:padding="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="일정 이름"
                    android:theme="@style/AppTheme.CourseSubmit"
                    app:counterEnabled="true"
                    app:counterMaxLength="12"
                    app:theme="@style/AppTheme.CourseSubmit">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edittext_submit_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:nextFocusForward="@+id/edittext_submit_cost"
                        android:singleLine="true"
                        android:theme="@style/AppTheme.CourseSubmit"
                        app:theme="@style/AppTheme.CourseSubmit" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text"
                    android:layout_toStartOf="@+id/textView"
                    android:hint="일정 가격"
                    android:nextFocusDown="@id/edittext_submit_title"
                    android:nextFocusRight="@id/edittext_submit_title"
                    android:theme="@style/AppTheme.CourseSubmit"
                    app:theme="@style/AppTheme.CourseSubmit">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edittext_submit_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:nextFocusForward="@id/edittext_submit_title"
                        android:singleLine="true"
                        android:theme="@style/AppTheme.CourseSubmit"
                        app:theme="@style/AppTheme.CourseSubmit" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/text2"
                    android:layout_alignEnd="@+id/text"
                    android:paddingBottom="5dp"
                    android:text="원"
                    android:textColor="@color/colorPrimary"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/submit_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit_center"
                android:padding="15dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imageview_submit_location"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="15dp"
                    android:src="@drawable/ic_place_white_24dp" />

                <RelativeLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp">

                    <RelativeLayout
                        android:id="@+id/view_submit_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="56.5dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/colorPrimary"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textview_submit_start_timeview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="오전 12:00"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:visibility="invisible" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageview_submit_time"
                            android:layout_width="57.5dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_access_time_white_24dp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textview_submit_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/imageview_submit_time"
                            android:gravity="center_vertical"
                            android:text="시작"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/view_submit_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="56.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorPrimary"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textview_submit_end_timeview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="오후 12:00"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:visibility="invisible" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageview_submit_time2"
                            android:layout_width="57.5dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_access_time_white_24dp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textview_submit_time2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/imageview_submit_time2"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="끝"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />
                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_submit_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit_bottom"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:text="일정 등록하기"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>