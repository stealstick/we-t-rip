<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="1st DAY"
        android:textColor="@color/floadingbuttonbackground"
        android:textSize="30sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/submit_top"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/submit_course_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="제주도 일출랜드"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/submit_course_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    android:text="2,000원"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/submit_course_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/submit_course_title"
                    android:paddingLeft="10dp"
                    android:text="AM10:00~PM12:00" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/submit_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit_top"
                android:padding="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="일정 이름"
                    android:theme="@style/AppTheme.CourseSubmit"
                    app:counterEnabled="true"
                    app:counterMaxLength="12"
                    app:theme="@style/AppTheme.CourseSubmit">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/AppTheme.CourseSubmit"
                        app:theme="@style/AppTheme.CourseSubmit" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text"
                    android:layout_toStartOf="@+id/textView"
                    android:hint="일정 가격"
                    android:theme="@style/AppTheme.CourseSubmit"
                    app:theme="@style/AppTheme.CourseSubmit">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/AppTheme.CourseSubmit"
                        app:theme="@style/AppTheme.CourseSubmit" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/text2"
                    android:layout_alignEnd="@+id/text"
                    android:paddingBottom="5dp"
                    android:text="원"
                    android:textColor="@color/colorPrimary"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/submit_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit_center"
                android:padding="15dp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="15dp"
                    android:src="@drawable/ic_place_white_24dp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="15dp"
                    android:src="@drawable/ic_access_time_white_24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit_bottom"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:text="일정 등록하기"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>